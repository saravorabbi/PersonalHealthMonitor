<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/show_line_chart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Line Chart"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@color/azzurrino"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/show_bar_chart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bar Chart"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@color/azzurrino"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"/>

            </LinearLayout>


            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart_temperatura"
                android:layout_width="match_parent"
                android:layout_height="313dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart_peso"
                android:layout_width="match_parent"
                android:layout_height="313dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart_pressione_sistolica"
                android:layout_width="match_parent"
                android:layout_height="313dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart_pressione_diastolica"
                android:layout_width="match_parent"
                android:layout_height="313dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart_glicemia"
                android:layout_width="match_parent"
                android:layout_height="313dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>